<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jobs - Jobjunction</title>
    <link rel="stylesheet" href="jobs.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/3a9977856a.js" crossorigin="anonymous"></script>
</head>

<body>
    <div id="nav">
        <div id="logo">
            <img src="jobjunction-high-resolution-logo.png" alt="">
        </div>
        <div id="nav_links">
            <a href="home">
                <h4>Home</h4>
            </a>
            <a href="jobs">
                <h4>Jobs</h4>
            </a>
            <a href="about_us">
                <h4>About Us</h4>
            </a>
            <a href="profile">
                <h4>Profile</h4>
            </a>
        </div>
    </div>
    <div id="banner">
        <div id="header">
            <h2>Say no to all your job related tensions with JobJunction!</h2>
            <p>Start applying <b>Now</b></p>
        </div>
        <div id="banner-image">
            <img src="banner_photo.jpg" alt="">
        </div>
    </div>
    <div id="below_banner">
        <p>{{jobs.length}} jobs available</p>
    </div>
    <div id="main">
        {{#each jobs}}
        <div class="job">
            <div id="layer1">
                <div id="image">
                    <img src={{logoURL}} alt="">
                </div>
                <div id="heading">
                    <a href={applicationLink}>
                        <h2>{{jobTitle}}</h2>
                        <p>{{companyName}}</p>
                    </a>
                </div>
            </div>
            <div id="layer2">
                <div id="show_location">
                    <i class="fa-solid fa-location-dot"></i>
                    <p>{{location}}</p>
                </div>
                <div id="others">
                    <div id="show_salary">
                        <div id="icon">
                            <i class="fa-solid fa-money-bill-wave"></i>
                            <p>Salary</p>
                        </div>
                        <div id="show_salary2">
                            <p>â‚¹{{salary}}</p>
                        </div>
                    </div>
                    <div id="show_experience">
                        <div id="icon">
                            <i class="fa-solid fa-briefcase"></i>
                            <p>Experience</p>
                        </div>
                        <div id="show_experience2">
                            <p>{{experience}}</p>
                        </div>
                    </div>
                    <div id="show_jobtype">
                        <div id="icon">
                            <i class="fa-solid fa-clipboard"></i>
                            <p>Job Type</p>
                        </div>
                        <div id="show_jobType2">
                            <p>{{jobType}}</p>
                        </div>
                    </div>
                </div>
            </div>
                <button id="view_details" onclick="showDetails('{{_id}}')">View Details</button>
        </div>
        {{/each}}
    </div>
    <script>
        function showDetails(id) {
            window.location.href = id;
        }  
    </script>
</body>

</html>